<Application x:Class="WslTamer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WslTamer.UI"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
                
                <!-- Keep our custom brushes for backward compatibility with existing XAML -->
                <ResourceDictionary Source="Themes/Light.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Styles for Standard WPF Controls - Ensure theme consistency -->
            <Style TargetType="Label">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Setter Property="Padding" Value="0,0,0,5"/>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <Style TargetType="RadioButton">
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,8"/>
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextFillColorPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource ControlElevationBorderBrush}"/>
                <Setter Property="Padding" Value="8,6"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>

            <!-- Spacing Constants -->
            <system:Double x:Key="StandardPageMargin">24</system:Double>
            <system:Double x:Key="StandardCardSpacing">10</system:Double>
            <system:Double x:Key="StandardSectionSpacing">20</system:Double>
            <system:Double x:Key="StandardInputSpacing">15</system:Double>
            <system:Double x:Key="StandardButtonSpacing">10</system:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
