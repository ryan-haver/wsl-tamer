<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FF1E1E1E"/>
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="#FFFFFFFF"/>
    
    <!-- Controls (General) -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FF2D2D30"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FF3F3F46"/>
    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="#FF3E3E42"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#FF404040"/>
    <SolidColorBrush x:Key="ControlDisabledForegroundBrush" Color="#FF808080"/>

    <!-- Lists & Inputs -->
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#FF252526"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FF333337"/>
    
    <!-- Accents -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="GroupHeaderBrush" Color="#FF007ACC"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FFCCCCCC"/>
</ResourceDictionary>