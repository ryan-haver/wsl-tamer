<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Window -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="WindowForegroundBrush" Color="#FF000000"/>
    
    <!-- Controls (General) -->
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFF0F0F0"/>
    <SolidColorBrush x:Key="ControlForegroundBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="ControlBorderBrush" Color="#FFCCCCCC"/>
    <SolidColorBrush x:Key="ControlMouseOverBrush" Color="#FFE5F1FB"/>
    <SolidColorBrush x:Key="ControlPressedBrush" Color="#FFCCE4F7"/>
    <SolidColorBrush x:Key="ControlDisabledBrush" Color="#FFF4F4F4"/>
    <SolidColorBrush x:Key="ControlDisabledForegroundBrush" Color="#FF888888"/>

    <!-- Lists & Inputs -->
    <SolidColorBrush x:Key="ListBackgroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFFFF"/>
    
    <!-- Accents -->
    <SolidColorBrush x:Key="AccentBrush" Color="#FF007ACC"/>
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="GroupHeaderBrush" Color="#FF003399"/>
    
    <!-- Text -->
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#FF000000"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#FF666666"/>
</ResourceDictionary>