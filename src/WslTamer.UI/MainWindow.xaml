<Window x:Class="WslTamer.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:WslTamer.UI"
        mc:Ignorable="d"
        Title="WSL Tamer" Height="0" Width="0"
        ShowInTaskbar="False"
        Visibility="Hidden"
        WindowStyle="None"
        ResizeMode="NoResize">
    
    <Grid>
        <tb:TaskbarIcon x:Name="MyNotifyIcon"
                        ToolTipText="WSL Tamer">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu x:Name="TrayMenu" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}">
                    <MenuItem Header="Status: Checking..." x:Name="StatusMenuItem" IsEnabled="False" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="Profiles" x:Name="ProfilesMenu"/>
                    <MenuItem Header="Actions">
                        <MenuItem Header="🛑 Shutdown WSL" Click="ShutdownWsl_Click"/>
                        <MenuItem Header="🧹 Reclaim Memory" Click="ReclaimMemory_Click"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="Settings" Click="Settings_Click"/>
                    <MenuItem Header="Start with Windows" x:Name="TrayStartWithWindows" IsCheckable="True" Click="TrayStartWithWindows_Click"/>
                    <MenuItem Header="Exit" Click="Exit_Click"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>
