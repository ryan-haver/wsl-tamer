<ui:FluentWindow x:Class="WslTamer.UI.ImportDistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="Import Distribution" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="Import Distribution" />

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Distro Name -->
            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <Label Content="Distribution Name" Padding="0,0,0,5"/>
                <TextBox Name="TxtName" ToolTip="Enter a unique name for the imported distribution."/>
            </StackPanel>

            <!-- Install Location -->
            <StackPanel Grid.Row="1" Margin="0,0,0,15">
                <Label Content="Install Location" Padding="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="TxtLocation" Grid.Column="0" Margin="0,0,5,0" ToolTip="Select the folder where the distribution will be installed."/>
                    <Button Content="..." Grid.Column="1" Width="30" Click="BtnBrowseLocation_Click" ToolTip="Browse for folder."/>
                </Grid>
            </StackPanel>

            <!-- Tar File -->
            <StackPanel Grid.Row="2" Margin="0,0,0,15">
                <Label Content="Tar File Source" Padding="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Name="TxtTarFile" Grid.Column="0" Margin="0,0,5,0" ToolTip="Select the .tar or .tar.gz file to import."/>
                    <Button Content="..." Grid.Column="1" Width="30" Click="BtnBrowseTar_Click" ToolTip="Browse for file."/>
                </Grid>
            </StackPanel>

            <!-- Progress -->
            <StackPanel Grid.Row="3" VerticalAlignment="Center" Name="PnlProgress" Visibility="Collapsed">
                <ProgressBar IsIndeterminate="True" Height="10" Margin="0,0,0,5"/>
                <TextBlock Text="Importing... This may take a while." HorizontalAlignment="Center" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click" Name="BtnCancel"/>
                <Button Content="Import" Width="80" Click="BtnImport_Click" Name="BtnImport" IsDefault="True" ToolTip="Start the import process."/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
