<Window x:Class="WslTamer.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        mc:Ignorable="d"
        Title="WSL Tamer Settings" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Profiles">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Profile List -->
                    <DockPanel Grid.Column="0">
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <Button Name="BtnAddProfile" Content="Add" Width="60" Margin="0,0,5,0" Click="BtnAddProfile_Click"/>
                            <Button Name="BtnRemoveProfile" Content="Remove" Width="60" Click="BtnRemoveProfile_Click"/>
                        </StackPanel>
                        <ListBox Name="LstProfiles" DisplayMemberPath="Name" SelectionChanged="LstProfiles_SelectionChanged"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="LstProfiles_PreviewMouseLeftButtonDown"
                                 Drop="LstProfiles_Drop"
                                 MouseMove="LstProfiles_MouseMove"/>
                    </DockPanel>
                    
                    <!-- Profile Editor -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0" Name="PnlEditor" IsEnabled="False">
                        <Label Content="Profile Name"/>
                        <TextBox Name="TxtName" Margin="0,0,0,10"/>
                        
                        <Label Content="Memory Limit (e.g. 4GB, 512MB)"/>
                        <TextBox Name="TxtMemory" Margin="0,0,0,10"/>
                        
                        <Label Content="Processors (0 = Default)"/>
                        <TextBox Name="TxtProcessors" Margin="0,0,0,10"/>
                        
                        <Label Content="Swap (e.g. 2GB, 0 to disable)"/>
                        <TextBox Name="TxtSwap" Margin="0,0,0,10"/>
                        
                        <CheckBox Name="ChkLocalhost" Content="Localhost Forwarding" Margin="0,0,0,10"/>

                        <GroupBox Header="Auto-Switch Triggers" Margin="0,10,0,10">
                            <StackPanel Margin="5">
                                <ListBox Name="LstTriggers" Height="80" Margin="0,0,0,5">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <ComboBox Name="CboTriggerType" Width="100" Margin="0,0,5,0">
                                        <ComboBoxItem Content="Process Start"/>
                                        <ComboBoxItem Content="On Battery"/>
                                        <ComboBoxItem Content="Plugged In"/>
                                    </ComboBox>
                                    <TextBox Name="TxtTriggerValue" Width="100" Margin="0,0,5,0" ToolTip="Process Name (e.g. code.exe)"/>
                                    <Button Content="Add" Width="50" Click="BtnAddTrigger_Click"/>
                                    <Button Content="Del" Width="50" Margin="5,0,0,0" Click="BtnDeleteTrigger_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <Button Content="Save Changes" HorizontalAlignment="Right" Width="100" Click="BtnSaveProfile_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Updates">
                <StackPanel Margin="10">
                    <CheckBox Name="ChkAutoCheckUpdates" Content="Automatically check for updates on startup" IsChecked="True" Margin="0,0,0,10"/>
                    <Button Content="Check Now" HorizontalAlignment="Left" Click="BtnCheckUpdates_Click"/>
                    <TextBlock Name="TxtUpdateStatus" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
