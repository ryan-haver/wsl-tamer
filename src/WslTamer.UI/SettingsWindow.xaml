<ui:FluentWindow x:Class="WslTamer.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        xmlns:views="clr-namespace:WslTamer.UI.Views"
        xmlns:converters="clr-namespace:WslTamer.UI.Converters"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="WSL Tamer Settings" Height="550" Width="700"
        MinWidth="700" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StateToColorConverter x:Key="StateToColorConverter"/>
        <converters:BooleanToAttachConverter x:Key="BooleanToAttachConverter"/>
        
        <Style x:Key="HelpIcon" TargetType="ui:SymbolIcon">
            <Setter Property="Symbol" Value="Info24"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="WSL Tamer Settings" Icon="/Assets/app.ico" />

        <ui:NavigationView x:Name="RootNavigation"
                           Grid.Row="1"
                           PaneDisplayMode="Left"
                           IsPaneOpen="True"
                           SelectionChanged="RootNavigation_SelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="General" Tag="General" TargetPageType="{x:Type views:GeneralPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Settings24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Distributions" Tag="Distributions" TargetPageType="{x:Type views:DistributionsPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="AppGeneric24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Profiles" Tag="Profiles" TargetPageType="{x:Type views:ProfilesPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Person24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Hardware" Tag="Hardware" TargetPageType="{x:Type views:HardwarePage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="UsbStick24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="About" Tag="About" TargetPageType="{x:Type views:AboutPage}">
                    <ui:NavigationViewItem.Icon>
                        <ui:SymbolIcon Symbol="Info24" />
                    </ui:NavigationViewItem.Icon>
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.ContentOverlay>
                <ContentControl x:Name="ContentFrame" Margin="20"/>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
