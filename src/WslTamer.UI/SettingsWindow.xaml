<Window x:Class="WslTamer.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        xmlns:converters="clr-namespace:WslTamer.UI.Converters"
        mc:Ignorable="d"
        Title="WSL Tamer Settings" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StateToColorConverter x:Key="StateToColorConverter"/>
        
        <Style TargetType="GroupBox">
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
        </Style>
        <Style TargetType="TabItem">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="{DynamicResource ListBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{DynamicResource WindowForegroundBrush}"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="General">
                <StackPanel Margin="10">
                    <CheckBox Name="ChkStartOnLogin" Content="Start WSL Tamer when I log in" Margin="0,0,0,10" Click="ChkStartOnLogin_Click"/>
                    
                    <GroupBox Header="Global Actions" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button Content="Open Terminal" Padding="10,5" Margin="0,0,10,0" Click="BtnLaunchWsl_Click"/>
                            <Button Content="Start Background" Padding="10,5" Margin="0,0,10,0" Click="BtnStartBackground_Click"/>
                            <Button Content="Shutdown WSL" Padding="10,5" Margin="0,0,10,0" Click="BtnShutdownWsl_Click"/>
                            <Button Content="Reclaim Memory" Padding="10,5" Click="BtnReclaimMemory_Click"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="Distributions">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Content="Refresh" HorizontalAlignment="Right" Click="BtnRefreshDistros_Click" Margin="0,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1">
                        <ItemsControl Name="IcDistros">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Width="250" Padding="10">
                                        <StackPanel>
                                            <DockPanel LastChildFill="False">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                                <TextBlock Text="â˜…" Visibility="{Binding IsDefault, Converter={StaticResource BooleanToVisibilityConverter}}" DockPanel.Dock="Right" Foreground="Gold" ToolTip="Default Distribution"/>
                                            </DockPanel>
                                            <TextBlock Text="{Binding State}" Margin="0,5,0,0" Foreground="{Binding IsRunning, Converter={StaticResource StateToColorConverter}}"/>
                                            <TextBlock Text="{Binding Version, StringFormat='WSL {0}'}" Margin="0,0,0,10" Foreground="Gray"/>
                                            
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                <Button Content="Run" Margin="0,0,5,0" Tag="{Binding Name}" Click="BtnRunDistro_Click"/>
                                                <Button Content="Stop" Margin="0,0,5,0" Tag="{Binding Name}" Click="BtnStopDistro_Click"/>
                                                <Button Content="Set Default" Tag="{Binding Name}" Click="BtnSetDefaultDistro_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Profiles">
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Profile List -->
                    <DockPanel Grid.Column="0">
                        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                            <Button Name="BtnAddProfile" Content="Add" Width="60" Margin="0,0,5,0" Click="BtnAddProfile_Click"/>
                            <Button Name="BtnRemoveProfile" Content="Remove" Width="60" Click="BtnRemoveProfile_Click"/>
                        </StackPanel>
                        <ListBox Name="LstProfiles" DisplayMemberPath="Name" SelectionChanged="LstProfiles_SelectionChanged"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="LstProfiles_PreviewMouseLeftButtonDown"
                                 Drop="LstProfiles_Drop"
                                 MouseMove="LstProfiles_MouseMove"/>
                    </DockPanel>
                    
                    <!-- Profile Editor -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0" Name="PnlEditor" IsEnabled="False">
                        <Label Content="Profile Name"/>
                        <TextBox Name="TxtName" Margin="0,0,0,10"/>
                        
                        <Label Content="Memory Limit (e.g. 4GB, 512MB)"/>
                        <TextBox Name="TxtMemory" Margin="0,0,0,10"/>
                        
                        <Label Content="Processors (0 = Default)"/>
                        <TextBox Name="TxtProcessors" Margin="0,0,0,10"/>
                        
                        <Label Content="Swap (e.g. 2GB, 0 to disable)"/>
                        <TextBox Name="TxtSwap" Margin="0,0,0,10"/>
                        
                        <CheckBox Name="ChkLocalhost" Content="Localhost Forwarding" Margin="0,0,0,10"/>

                        <GroupBox Header="Auto-Switch Triggers" Margin="0,10,0,10">
                            <StackPanel Margin="5">
                                <ListBox Name="LstTriggers" Height="80" Margin="0,0,0,5">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Description}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <ComboBox Name="CboTriggerType" Width="100" Margin="0,0,5,0">
                                        <ComboBoxItem Content="Process Start"/>
                                        <ComboBoxItem Content="On Battery"/>
                                        <ComboBoxItem Content="Plugged In"/>
                                    </ComboBox>
                                    <TextBox Name="TxtTriggerValue" Width="100" Margin="0,0,5,0" ToolTip="Process Name (e.g. code.exe)"/>
                                    <Button Content="Add" Width="50" Click="BtnAddTrigger_Click"/>
                                    <Button Content="Del" Width="50" Margin="5,0,0,0" Click="BtnDeleteTrigger_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        
                        <Button Content="Save Changes" HorizontalAlignment="Right" Width="100" Click="BtnSaveProfile_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Updates">
                <StackPanel Margin="10">
                    <CheckBox Name="ChkAutoCheckUpdates" Content="Automatically check for updates on startup" IsChecked="True" Margin="0,0,0,10"/>
                    <Button Content="Check Now" HorizontalAlignment="Left" Click="BtnCheckUpdates_Click"/>
                    <TextBlock Name="TxtUpdateStatus" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
