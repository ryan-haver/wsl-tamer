<ui:FluentWindow x:Class="WslTamer.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        xmlns:converters="clr-namespace:WslTamer.UI.Converters"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="WSL Tamer Settings" Height="550" Width="700"
        MinWidth="700" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StateToColorConverter x:Key="StateToColorConverter"/>
        <converters:BooleanToAttachConverter x:Key="BooleanToAttachConverter"/>
        
        <Style x:Key="HelpIcon" TargetType="ui:SymbolIcon">
            <Setter Property="Symbol" Value="Info24"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Help"/>
            <Setter Property="Foreground" Value="{DynamicResource TextFillColorSecondaryBrush}"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="WSL Tamer Settings" Icon="/Assets/app.ico" />

        <ui:NavigationView x:Name="RootNavigation"
                           Grid.Row="1"
                           PaneDisplayMode="Left"
                           IsPaneOpen="True"
                           SelectionChanged="RootNavigation_SelectionChanged">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="General" Icon="Settings24" Tag="General" />
                <ui:NavigationViewItem Content="Distributions" Icon="AppGeneric24" Tag="Distributions" />
                <ui:NavigationViewItem Content="Profiles" Icon="Person24" Tag="Profiles" />
                <ui:NavigationViewItem Content="Hardware" Icon="UsbStick24" Tag="Hardware" />
                <ui:NavigationViewItem Content="About" Icon="Info24" Tag="About" />
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.Content>
                <ContentControl x:Name="ContentFrame" Margin="20"/>
            </ui:NavigationView.Content>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
