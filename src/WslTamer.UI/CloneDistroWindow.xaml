<Window x:Class="WslTamer.UI.CloneDistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WslTamer.UI"
        mc:Ignorable="d"
        Title="Clone Distribution" Height="250" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- New Distro Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <Label Content="New Distribution Name" Padding="0,0,0,5"/>
            <TextBox Name="TxtName" ToolTip="Enter a unique name for the new distribution."/>
        </StackPanel>

        <!-- Install Location -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <Label Content="Install Location" Padding="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Name="TxtLocation" Grid.Column="0" Margin="0,0,5,0" ToolTip="Select the folder where the new distribution will be installed."/>
                <Button Content="..." Grid.Column="1" Width="30" Click="BtnBrowseLocation_Click" ToolTip="Browse for folder."/>
            </Grid>
        </StackPanel>

        <!-- Progress -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Name="PnlProgress" Visibility="Collapsed">
            <ProgressBar IsIndeterminate="True" Height="10" Margin="0,0,0,5"/>
            <TextBlock Text="Cloning... This may take a while." HorizontalAlignment="Center" Foreground="{DynamicResource TextSecondaryBrush}"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Cancel" Width="80" Margin="0,0,10,0" Click="BtnCancel_Click" Name="BtnCancel"/>
            <Button Content="Clone" Width="80" Click="BtnClone_Click" Name="BtnClone" IsDefault="True" ToolTip="Start the cloning process."/>
        </StackPanel>
    </Grid>
</Window>